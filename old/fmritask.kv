        Label:
            color: c("#303030")
            size_hint: None, None
            size: self.texture_size
            pos_hint: {"top": .85, "x": .03}
            text: "Destino dos dados"
            font_size: "14sp"

        TextInput:
            size_hint: .56, None
            pos_hint: {"top": .86, "x": .25}
