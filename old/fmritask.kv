            font_size: "13sp"
            readonly: True

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1., 0.35
            pos_hint: {"x": 0, "y": 0}

            BoxLayout:
                padding: [20]

                Button:
                    background_color: c("#787878")
                    size_hint: .3, .5
                    text: "Iniciar Treinamento"
                    font_size: "18sp"

            BoxLayout:
                padding: [20]

                Button:
                    background_color: c("#787878")
                    size_hint: .3, .5
                    text: "Iniciar Experimento"
                    font_size: "18sp"


<OptionNumber@Label>:
    color: c("#000000")
    size_hint: None, None
    height: self.font_size + 10
    width: self.font_size + 10
    font_size: "70sp"
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size


<Treinamento>:
    some_property: setattr(Window, 'fullscreen' , 'auto')  or 'real_value!'
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        color: c("#ffffff")
        size_hint: None, None
        size: self.texture_size
        pos_hint: {"top": .8, "x": .21}
        text: "5 + 4 = ?"
        font_size: "80sp"
        id: eq_treinamento

    BoxLayout:
        size_hint: None, None
        pos_hint: {"center_x": .25, "center_y": .4}
        orientation: "horizontal"
        id: "answer_menu"
        OptionNumber:
            text: "0"
            id: on0
        OptionNumber:
            text: "1"
            id: on1
